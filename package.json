  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "@rljson/db": "link:../rljson-db",
      "@rljson/io": "link:../rljson-io"
    }
  },
  "packageManager": "pnpm@10.11.0"
