{
  "name": "@rljson/server",
  "version": "0.0.1",
  "description": "Rljson server description",
  "homepage": "https://github.com/rljson/server",
  "bugs": "https://github.com/rljson/server/issues",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rljson/server.git"
  },
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
