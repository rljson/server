  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.16",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "globals": "^16.5.0",
    "jsdoc": "^4.0.5",
    "read-pkg": "^10.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-node": "^5.2.0",
